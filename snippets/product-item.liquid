<!-- product-item -->
<div class="{{ classes }}">
    <div class="product-item">
        <a href="{{ product.url }}">

            {% for tag in product.tags %}
                {% assign _tag = tag | downcase %}
                {% if _tag contains "new" %}
                    {% break %}
                {% endif %}
            {% endfor %}

            <div class="top">
                {% assign productImage = product.featured_media | img_url: 'master' %}
                <img src="{{ productImage }}" alt="{{ product.title }}">
            </div>
            <div class="bottom" style="display: none;">
                <div class="content">
                    <h4 class="title">{{ product.title }}</h4>
                    <span class="price">{{ product.price | money }}</span>
                    {{ product.description }}
                </div>
            </div>
        </a>

        <!-- smart wishlist -->
        <span class="smartwishlist product-item-wishlist" 
            data-product="{{ product.id }}" 
            data-variant="{{ product.variants.first.id }}">
        </span>
        <!-- smart wishlist //-->
    </div>
</div>
<!-- product-item // -->