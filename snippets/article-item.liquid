<article class="{{ classes }} article-item grid-x align-middle">
    <div class="cell large-auto" style="position: relative;">
        <img src="{{ article.image.src | img_url: 'master' }}" alt="{{ article.image.alt }}">
        <span class="date">
            {{ article.published_at | time_tag: format: 'date_at_time' }}
        </span>
    </div>
    <div class="cell large-auto">
        <div class="content">
            <h4 class="title">{{ article.title }}</h4>
            <p class="desc">{{ article.content }}</p>
            <a href="{{ article.url }}" class="btn btn-article">Больше</a>
        </div>
    </div>
</article>