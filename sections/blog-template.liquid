<!-- blog-template -->
<section class="blog">
    <div class="grid-container">
        <div class="grid-x">
            <h2 class="main-title">{{ blog.title }}</h2>
        </div>
        <div class="grid-x grid-margin-x grid-margin-y">
            {% paginate blog.articles by section.settings.range %}
                {% for article in blog.articles %}
                    {% render "article-item-small", article: article, classes: "cell medium-4 large-3 small" %}
                {% endfor %}
                {% if paginate.pages > 1 %}
                    <div class="cell pagination">
                        {{ paginate | default_pagination }}
                    </div> 
                {% endif %}     
            {% endpaginate %}
        </div>
    </div>
</section>
<!-- blog-template //-->

{% schema %}
{
    "name": "Blog",
    "settings": [
        {
            "type": "range",
            "id": "range",
            "label": "Articles per page",
            "min": 1,
            "max": 16,
            "step": 1,
            "default": 1
        }
    ]
}
{% endschema %}