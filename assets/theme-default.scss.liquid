section.customer_page {
    padding: 200px 15px;
    @media (max-width: 639px) {
        padding: 150px 15px;
    }
    .grid-container {
        max-width: 700px;
        &.fluid {
            max-width: 1000px;
        }
    }
    form {
        input, select {
            cursor: pointer;
            padding: 10px 5px;
            border: none;
            border-bottom: 1px solid #eee;
            margin-bottom: 20px;
            transition: border-bottom-color .3s linear;
            &:active, &:focus {
                outline: none;
                border: none;
            }
            &:hover
            { 
                outline: none;
                transition: border-bottom-color .3s linear;
                border-bottom-color: #000;
            }
            &.full-size {
                display: block;
                width: 100%;
            }
        }
        select {
            background: #fff;
            color: #000;
        }
    }
    .title {
        font-size: 36px;
        text-transform: uppercase;
        color: #000;
        padding-bottom: 0;
        margin-bottom: 1.25rem;
        @media (max-width: 639px) {
            font-size: 30px;
        }
        &.sub {
            font-size: 24px;
            @media (max-width: 639px) {
                font-size: 20px;
            }
        }
    }
    .text {
        display: block;
        font-size: 14px;
    }
    .nav {
        display: flex;
        align-items: center;
        a {
            &:not(:last-child) {
                margin-right: 15px;
            }
        }
    }
    .link {
        display: inline-block;
        cursor: pointer;
        text-decoration: underline;
        color: #000;
        transition: all .3s linear;
        &:hover {
            transition: all .3s linear;
            color: #ccc;
            text-decoration: none;
        }
    }
}
