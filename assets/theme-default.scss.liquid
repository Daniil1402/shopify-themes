// Contain:
// customer pages
// search page
// cart
// 404
// popup
// buttons: primary, inherit, paginate

// global
input, button, form, select, textarea {
    &:focus, &:active {
        box-shadow: none;
        outline: none;
    }
}

.btn {
    display: block;
    cursor: pointer;
    text-align: center;
    color: #24292e;
    background-color: #fff;
    border: none;
    padding: 10px 0;
    text-decoration: none;
    &.btn-primary {
        width: 100%;
        height: 100%;
        text-transform: uppercase;
        border: 1px solid #000;
        transition: color .3s linear, background-color .3s linear;
        &:hover {
            transition: color .3s linear, background-color .3s linear;
            background-color: #fff;
            color: #000;
        }
    }
    &.btn-inherit {
        display: inline-block;
        color: #000;
        background: none;
        padding: 0;
        text-decoration: underline;
        transition: opacity .3s linear;
        &:hover {
            transition: opacity .3s linear;
            opacity: 0.6;
        }
    }
    &.btn-paginate {
        display: inherit;
        background-color: inherit;
        color: inherit;
        padding: 10px;
    }
    &.btn-popup {
        text-transform: uppercase;
        border: 1px solid #000;
        border-radius: 4px;
        padding: 15px 8px;
        transition: color .3s linear, background-color .3s linear;
        &:hover {
            transition: color .3s linear, background-color .3s linear;
            background-color: #fff;
            color: #000;
        }
    }
    &.btn-product {
        width: 100%;
        text-transform: uppercase;
        border: 1px solid #fff;
        padding: 15px 0;
        font-size: 20px;
        transition: color .3s linear, background-color .3s linear, border-color .3s linear;
        &:hover {
            transition: color .3s linear, background-color .3s linear, border-color .3s linear;
            background-color: #24292e;
            color: #fff;
            border: 1px solid #24292e;
        }
    }
    &.btn-article {
        max-width: 200px;
        width: 100%;
        text-transform: uppercase;
        border: 1px solid #fcff5a;
        background-color:#fff;
        padding: 10px 0;
        font-size: 20px;
        transition: color .3s linear, background-color .3s linear;
        &:hover {
            transition: color .3s linear, background-color .3s linear;
            background-color:#fcff5a;
            color: #000;
        }
    }
    &.btn-full {
        max-width: 100%;
    }
}
img {
    display: block;
    max-width: 100%;
    height: auto;
}

