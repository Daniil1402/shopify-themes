// header
.header {
    padding: 20px 10px;
    background: #24292e;
    margin-bottom: 40px;
    a {
        transition: color .3s linear;;
        color: #fff;
        text-decoration: none;
        &:hover {
            transition: color .3s linear;;
            color: #ccc;
        }
        &:not(:last-child) {
            margin-right: 10px;
        }
    }
}

// product-item
.product-item {
    display: block;
    text-decoration: none;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 20px;
    transition: box-shadow .3s linear;
    &:hover {
        transition: box-shadow .3s linear;
        box-shadow: 0 0 2px #000;
    }
    img {
        width: 100%;
    }
    .title {
        color: #000;
        font-size: 16px;
        margin: 3px 0;
    }
    span, b {
        color: #000;
    }
}