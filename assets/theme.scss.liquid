// body
body {
    font-family: 'Ubuntu', sans-serif;
    font-weight: 400;
    background: #24292e;
    line-height: normal;
    font-size: rem(14);
}

// px to rem
$browser-context: 16;
@function rem($pixels, $context: $browser-context) {
  @return #{$pixels/$context}rem;
}

// global
.main-title {
    color: #fff;
    font-size: rem(40);
}
.default-text {
    color: #fff;
    margin: 0;
}

// pagination
.pagination {
    display: flex;
    justify-content: center;
    span {
        color: #fff !important;
        text-decoration: none;
        a {
            color: #fff;
            text-decoration: none;
        }
        &:not(:last-child) {
            margin-right: 10px;
        }
        &.current {
            text-decoration: underline;
        }
    }
}

.small-align-center {
    @media (max-width: 639px) {
        justify-content: center;
    }
}

.small-text-center {
    @media (max-width: 639px) {
        text-align: center;
    }
}

// product-item
.product-item {
    display: block;
    width: 100%;
    height: 100%;
    // padding: 10px;
    position: relative;
    text-decoration: none;
    a {
        display: block;
        position: relative;
        .tag {
            display: block;
            padding: 4px 8px;
            position: absolute;
            top: 20px;
            right: 20px;
            background: #fff;
            text-transform: uppercase;
        }
    }
    .bottom {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: #fff;
        overflow: hidden;
        .content {
            padding: 20px;
            .title {
                font-size: 30px;
                color: #24292e;
                text-transform: uppercase;
                font-weight: 700;
                text-align: center;
                margin: 0;
            }
            .price {
                display: block;
                text-align: center;
                font-weight: 300;
                color: #24292e;
            }
            p {
                font-weight: 500;
                color: #24292e;
            }
        }
    }
    .button-group {
        display: flex;
        justify-content: space-between;
    }
}

// article-item
.article-item {
    margin: 40px 0;
    position: relative;
    // article-item-small
    &.small {
        .date {
            right: auto;
            font-size: 14px;
            text-align: center;
            width: 100%;
        }
        .content {
            padding: 0;
            .title {
                font-size: 16px;
                text-align: center;
                margin: 10px 0;
            }
        }
    }
    .date {
        position: absolute;
        right: 20px;
        bottom: 20px;
        color: #24292e;
        text-transform: uppercase;
        font-weight: 500;
    }
    .content {
        padding: 20px;
        @media (max-width: 639px) {
            padding: 0;
        }
        .title {
            color: #fff;
            font-size: 28px;
            text-transform: uppercase;
            margin: 0;
            margin-bottom: 15px;
        }
        .desc {
            color: #fff;
            margin: 0;
            margin-bottom: 15px;
        }
    }
}

// collection-item
.collection-item {
    display: block;
    position: relative;
    padding: 10px;
    .title {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        text-transform: uppercase;
        color: #fff;
        font-size: 22px;

        width: 100%;
        text-align: center;
        padding: 0 15px;
    }
}

.collection-sort {
    padding: 40px 15px;
    display: flex;
    justify-content: flex-end;
    select {
        max-width: 300px;
        padding: 10px 5px;
        border: none;
        cursor: pointer;
        &:focus, &:active {
            box-shadow: none;
            outline: none;
        }
        option {
            cursor: pointer;
        }
    }
}

// header
.header {
    padding: 40px 0;
    position: fixed;
    top: 0;
    width: 100%;
    background: #24292e;
    z-index: 9999;
    border-bottom: 1px solid #fff;
    transition: padding .3s linear;
    @media (max-width: 639px) {
        padding: 15px 0;
    }
    &.header-padding {
        transition: padding .3s linear, opacity .3s linear;
        padding: 15px 0;
        opacity: 0.8;
        &:hover {
            transition: opacity .3s linear;
            opacity: 1;
        }
    }

    a {
        display: block;
        padding: 5px 10px;
        color: #fff;
        text-decoration: none;
        transition: color .3s linear;
        &:hover {
            transition: color .3s linear;;
            color: #fff;
            text-decoration: underline;
        }
        &.active {
            color: #fff;
            text-decoration: underline;
        }
        &:not(:last-child) {
            margin-right: 10px;
        }
    }
}

// footer
.footer {
    background: #24292e;
    padding: 100px 15px;
    border-top: 1px solid #fff;
    @media (max-width: 639px) {
        padding: 50px 15px;
        .cell {
            margin-bottom: 20px;
        }
    }
    nav {
        display: flex;
        flex-direction: column;
        a {
            text-transform: uppercase;
            color: #fff;
            text-decoration: none;
            &:not(:last-child) {
                margin-bottom: 10px;
            }
            &.active {
                text-decoration: underline;
            }
        }
    }
    .work {
        display: flex;
        flex-direction: column;
        p, span {
            display: block;
            color: #fff;
            margin: 0;
            &:not(:last-child) {
                margin-bottom: 10px;
            }
        }
    }
    .connect {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        @media (max-width: 639px) {
            align-items: inherit;
        }
        span, a, p {
            color: #fff;
        }
        a {
            transition: opacity .3s linear;
            &:hover {
                transition: opacity .3s linear;
                opacity: 0.8;
            }
        }
    }
}

// index-template
body.index-template {
    section.hero {
        position: relative;
        .index-slider {
            .image {
                position: relative;
                height: 0;
                padding-top: 56.25%;
                min-height: 600px;
                img {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            }
        }
    }
    section.products {
        padding: 40px 15px;
    }
    section.blog {
        padding: 40px 15px;
    }
    section.bigimage {
        img {
            max-height: 300px;
            overflow: hidden;
            object-fit: cover;
            width: 100%;
        }
    }
}

// list-collections-template
body.list-collections-template {
    section.collections {
        padding: 150px 15px 40px 15px;
        @media (max-width: 639px) {
            padding: 200px 15px 40px 15px;
        }
    }
}

// collection-template
body.collection-template {
    section.collection {
        padding: 200px 15px 40px 15px;
        @media (max-width: 639px) {
            padding: 250px 15px 40px 15px;
        }
        .hero-image {
            width: 100%;
            max-height: 400px;
            overflow: hidden;
            object-fit: cover;
        }
        .main-title {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: 0;
            font-size: 60px;
            text-transform: uppercase;
            width: 100%;
            text-align: center;
            padding: 0 15px;
            @media (max-width: 639px) {
                font-size: 22px;
            }
        }
    }
}

// product-template
body.product-template {
    section.product {
        padding: 200px 15px 40px 15px;
        @media (max-width: 639px) {
            padding: 250px 15px 40px 15px;
        }
        .product-slider.owl-carousel {
            .owl-dots {
                margin: 0;
                margin-top: 20px;
                button.owl-dot {
                    &:focus, &:active {
                        box-shadow: none;
                        outline: none;
                    }
                    &.active {
                        span {
                            background: red;
                        }
                    }
                }
            }
        }
        .content {
            padding-left: 100px;
            @media (max-width: 1023px) {
                padding-left: 0;
            }
            form {
                .cell {
                    margin-bottom: 20px;
                }
                select {
                    padding: 10px 5px;
                    border: none;
                    cursor: pointer;
                    &:focus, &:active {
                        box-shadow: none;
                        outline: none;
                    }
                    option {
                        cursor: pointer;
                    }
                }
                .price {
                    color: #fff;
                    text-transform: uppercase;
                    margin-right: 10px;
                }
                .quantity {
                    max-width: 50px;
                    &:focus, &:active {
                        box-shadow: none;
                        outline: none;
                    }
                }
            }
            .description {
                p, span {
                    color: #fff;
                }
            }
        }
    }
}

// article-template
body.article-template {
    section.article {
        padding: 200px 15px 40px 15px;
        @media (max-width: 639px) {
            padding: 250px 15px 40px 15px;
        }
        img {
            margin: 0 auto;
        }
        .content {
            p, span {
                color: #fff;
            }
        }
    }
}

// blog-template
body.blog-template {
    section.blog {
        padding: 200px 15px 40px 15px;
        @media (max-width: 639px) {
            padding: 200px 15px 40px 15px;
        }
