// cart-template
body.cart-template {
	.cart {
		padding: 200px 45px;
		color: #fff;
		@media (max-width: 639px) {
			padding: 150px 15px;
		}
		.cart-table {
			width: 100%;
			border: 1px solid #000;
			border-spacing: 0;
			margin-bottom: 15px;
			thead {
				background: #fafafa;
			}
			tbody {
				tr:nth-child(even) {
					background: #fafafa;
				}
			}
			.heading {
				text-align: left;
				font-weight: normal;
				padding: 15px 10px;
				@media (max-width: 639px) {
					padding: 5px;
				}
			}
			.content {
				padding: 15px 10px;
				@media (max-width: 639px) {
					padding: 5px;
				}
				&:first-child {
					padding-left: 10px;
				}
				&:last-child {
					padding-right: 10px;
				}
				&.quantity {
					input {
						padding: 3px;
						max-width: 30px;
						border: 1px solid #000;
					}
				}
			}
		}
		.textarea {
			width: 100%;
			min-height: 80px;
			border: 1px solid #000;
			padding: 10px;
		}
		.text {
			font-size: 14px;
			margin-bottom: 2px;
			padding-bottom: 0;
		}
		img {
			display: inline-block;
			max-width: 100%;
			height: auto;
			&.cart-img {
				max-width: 150px;
				margin-bottom: 0;
				@media (max-width: 639px) {
					max-width: 80px;
				}
			}
		}
	}
}
