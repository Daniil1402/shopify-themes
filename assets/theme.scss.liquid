// px to rem
$browser-context: 14;
@function rem($pixels, $context: $browser-context) {
	@return #{$pixels/$context}rem;
}

@font-face {
	font-family: "name";
	src: url("{{ 'name' | file_url }}");
	src: url("{{ 'name' | file_url }}&#iefix") format("embedded-opentype"), url("{{ 'name' | file_url }}") format("woff"), url("{{ 'name' | file_url }}") format("truetype");
	font-weight: normal;
	font-style: normal;
}

// body
body {
	font-family: "name", sans-serif;
	font-weight: 400;
	line-height: normal;
	font-size: rem(14);
}

// global scss
input,
button,
form,
select,
textarea {
	&:focus,
	&:active {
		box-shadow: none;
		outline: none;
	}
}

.main-title {
	color: #fff;
	font-size: rem(40);
}
.default-text {
	color: #fff;
	margin: 0;
}

.pagination {
	display: flex;
	justify-content: center;
	span {
		color: #fff !important;
		text-decoration: none;
		a {
			color: #fff;
			text-decoration: none;
		}
		&:not(:last-child) {
			margin-right: 10px;
		}
		&.current {
			text-decoration: underline;
		}
	}
}

